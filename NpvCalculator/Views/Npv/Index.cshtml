@model NpvCalculator.Models.NpvModel
@{
    ViewBag.Title = "NPV Calculator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts {
    @Scripts.Render("~/bundles/charts")
    @Scripts.Render("~/bundles/npvcalculator")
}

<form>
    <div class="form-horizontal">
        @Html.HiddenFor(model => model.CalculationID)
        @Html.HiddenFor(model => model.CommaDelimetedCashFlows)
        <div class="form-group">
            @Html.LabelFor(model => model.LowerBoundDiscountRate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.LowerBoundDiscountRate, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "0.01" })
            </div>
            @Html.LabelFor(model => model.DiscountRateIncrement, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.DiscountRateIncrement, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "0.01" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.UpperBoundDiscountRate, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.UpperBoundDiscountRate, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "0.01" })
            </div>
            @Html.LabelFor(model => model.InitialInvestment, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-2">
                @Html.TextBoxFor(model => model.InitialInvestment, htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "1" })
            </div>
        </div>
        <div class="form-group form-inline">
            @Html.Label("Cash Flow ($):", htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.TextBox("txtCashFlow", "0", htmlAttributes: new { @class = "form-control text-box single-line", type = "number", step = "1" })
                <button id="btnAdd" type="button" class="btn btn-primary">Add</button>
                <button id="btnCalculate" type="button" class="btn btn-primary">Calculate</button>
                <button id="btnReset" type="button" class="btn btn-danger">Reset</button>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-6">
                <table id="tblCashFlows" class="table table-bordered table-striped">
                    <thead class="bg-info">
                        <tr>
                            <th colspan="2" class="text-center">List of Cash Flows</th>
                        </tr>
                        <tr>
                            <th class="text-center">Cash Flow Value</th>
                            <th class="text-center"></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <hr />
        <div class="form-group">
            <canvas id="npvCanvas" style="display: none"></canvas>
        </div>
    </div>
</form>

<div id="alertModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Error Message</h4>
            </div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <button id="btnOk" type="button" class="btn btn-primary" data-dismiss="modal">Ok</button>
                <button id="btnYes" type="button" class="btn btn-primary">Yes</button>
                <button id="btnCancel" type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>
